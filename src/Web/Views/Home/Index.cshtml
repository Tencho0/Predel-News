@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<HomeViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <style>
        .home-page .hero-section { margin-bottom: 2rem; }
    </style>
}

<div class="home-page">
    @if (Model.BreakingNews?.Any() == true)
    {
        <div class="breaking-news-banner" role="alert">
            <span class="breaking-label">Breaking:</span>
            <div class="breaking-ticker">
                @foreach (var article in Model.BreakingNews)
                {
                    <a href="@article.GetUrl()" class="breaking-link">@article.Title</a>
                }
            </div>
        </div>
    }

    @await Html.PartialAsync("Partials/_Hero", Model.FeaturedArticles)

    @await Html.PartialAsync("Partials/_AdSlot", new { Position = "home-after-hero", Size = "728x90" })

    @{
        ViewData["SectionTitle"] = "Latest News";
        ViewData["ShowPagination"] = false;
    }
    @await Html.PartialAsync("Partials/_LatestList", new PagedResult<ArticleSummary>(Model.LatestArticles.ToList(), Model.LatestArticles.Count, 1, 20))

    @if (Model.CategoryBlocks?.Any() == true)
    {
        @await Html.PartialAsync("Partials/_CategoryBlocks", Model.CategoryBlocks)
    }

    @await Html.PartialAsync("Partials/_AdSlot", new { Position = "home-bottom", Size = "728x90" })
</div>
