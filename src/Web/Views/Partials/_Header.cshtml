@model BasePageViewModel
<header class="site-header">
    <div class="header-top">
        <div class="container">
            <div class="header-top-content">
                <time datetime="@DateTime.Now.ToString("yyyy-MM-dd")" class="current-date">
                    @DateTime.Now.ToString("dddd, d MMMM yyyy", new System.Globalization.CultureInfo("bg-BG"))
                </time>
            </div>
        </div>
    </div>

    <div class="header-main">
        <div class="container">
            <div class="header-content">
                <a href="/" class="logo" aria-label="Predel News - Home">
                    <span class="logo-text">Predel News</span>
                </a>

                <nav class="main-nav" aria-label="Main navigation">
                    <ul class="nav-list">
                        @if (Model?.NavigationCategories != null)
                        {
                            foreach (var category in Model.NavigationCategories)
                            {
                                <li class="nav-item">
                                    <a href="@category.GetUrl()" class="nav-link">@category.Name</a>
                                </li>
                            }
                        }
                    </ul>
                </nav>

                <div class="header-actions">
                    <button type="button" class="search-toggle" aria-label="Open search" aria-expanded="false" aria-controls="search-modal">
                        <svg class="icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="11" cy="11" r="8"></circle>
                            <path d="M21 21l-4.35-4.35"></path>
                        </svg>
                    </button>

                    <button type="button" class="menu-toggle" aria-label="Open menu" aria-expanded="false" aria-controls="mobile-menu">
                        <span class="hamburger">
                            <span></span>
                            <span></span>
                            <span></span>
                        </span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="header-nav-bar">
        <div class="container">
            <nav class="category-nav" aria-label="Category navigation">
                <ul class="category-nav-list">
                    @if (Model?.NavigationCategories != null)
                    {
                        foreach (var category in Model.NavigationCategories)
                        {
                            <li class="category-nav-item">
                                <a href="@category.GetUrl()" class="category-nav-link">@category.Name</a>
                            </li>
                        }
                    }
                </ul>
            </nav>
        </div>
    </div>
</header>

<div id="search-modal" class="search-modal" role="dialog" aria-modal="true" aria-label="Search" hidden>
    <div class="search-modal-overlay"></div>
    <div class="search-modal-content">
        <form action="/search" method="get" class="search-form" role="search">
            <label for="search-input" class="visually-hidden">Search articles</label>
            <input type="search" id="search-input" name="q" class="search-input" placeholder="Search articles..." autocomplete="off" />
            <button type="submit" class="search-submit" aria-label="Submit search">
                <svg class="icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="M21 21l-4.35-4.35"></path>
                </svg>
            </button>
            <button type="button" class="search-close" aria-label="Close search">
                <svg class="icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M18 6L6 18M6 6l12 12"></path>
                </svg>
            </button>
        </form>
    </div>
</div>
