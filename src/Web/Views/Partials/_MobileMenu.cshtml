@model BasePageViewModel
<div id="mobile-menu" class="mobile-menu" hidden>
    <div class="mobile-menu-overlay"></div>
    <div class="mobile-menu-panel">
        <div class="mobile-menu-header">
            <a href="/" class="mobile-menu-logo">
                <span class="logo-text">Predel News</span>
            </a>
            <button type="button" class="mobile-menu-close" aria-label="Close menu">
                <svg class="icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M18 6L6 18M6 6l12 12"></path>
                </svg>
            </button>
        </div>

        <nav class="mobile-menu-nav" aria-label="Mobile navigation">
            <ul class="mobile-nav-list">
                <li class="mobile-nav-item">
                    <a href="/" class="mobile-nav-link">Home</a>
                </li>
                @if (Model?.NavigationCategories != null)
                {
                    foreach (var category in Model.NavigationCategories)
                    {
                        <li class="mobile-nav-item">
                            <a href="@category.GetUrl()" class="mobile-nav-link">@category.Name</a>
                        </li>
                    }
                }
            </ul>
        </nav>

        <div class="mobile-menu-footer">
            <form action="/search" method="get" class="mobile-search-form" role="search">
                <label for="mobile-search-input" class="visually-hidden">Search articles</label>
                <input type="search" id="mobile-search-input" name="q" class="mobile-search-input" placeholder="Search..." />
                <button type="submit" class="mobile-search-button" aria-label="Search">
                    <svg class="icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="M21 21l-4.35-4.35"></path>
                    </svg>
                </button>
            </form>

            <div class="mobile-social">
                <a href="#" class="social-link" aria-label="Facebook">
                    <svg class="icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
                    </svg>
                </a>
                <a href="#" class="social-link" aria-label="Twitter">
                    <svg class="icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</div>
