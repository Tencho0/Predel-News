@model BasePageViewModel
<footer class="site-footer">
    <div class="footer-main">
        <div class="container">
            <div class="footer-grid">
                <div class="footer-brand">
                    <a href="/" class="footer-logo">
                        <span class="logo-text">Predel News</span>
                    </a>
                    <p class="footer-description">
                        Your trusted source for the latest news and in-depth articles.
                    </p>
                    <div class="footer-social">
                        <a href="#" class="social-link" aria-label="Facebook" rel="noopener noreferrer">
                            <svg class="icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
                            </svg>
                        </a>
                        <a href="#" class="social-link" aria-label="Twitter" rel="noopener noreferrer">
                            <svg class="icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
                            </svg>
                        </a>
                        <a href="#" class="social-link" aria-label="YouTube" rel="noopener noreferrer">
                            <svg class="icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z"></path>
                                <polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02" fill="#fff"></polygon>
                            </svg>
                        </a>
                    </div>
                </div>

                <nav class="footer-nav" aria-label="Footer navigation - Categories">
                    <h3 class="footer-nav-title">Categories</h3>
                    <ul class="footer-nav-list">
                        @if (Model?.NavigationCategories != null)
                        {
                            foreach (var category in Model.NavigationCategories.Take(6))
                            {
                                <li><a href="@category.GetUrl()">@category.Name</a></li>
                            }
                        }
                    </ul>
                </nav>

                <nav class="footer-nav" aria-label="Footer navigation - Pages">
                    <h3 class="footer-nav-title">Pages</h3>
                    <ul class="footer-nav-list">
                        <li><a href="/about">About Us</a></li>
                        <li><a href="/contact">Contact</a></li>
                        <li><a href="/privacy">Privacy Policy</a></li>
                        <li><a href="/terms">Terms of Service</a></li>
                        <li><a href="/advertise">Advertise</a></li>
                    </ul>
                </nav>

                <div class="footer-newsletter">
                    <h3 class="footer-nav-title">Newsletter</h3>
                    <p>Subscribe to receive the latest news directly to your inbox.</p>
                    <form class="newsletter-form" action="/newsletter/subscribe" method="post">
                        @Html.AntiForgeryToken()
                        <div class="newsletter-input-group">
                            <label for="newsletter-email" class="visually-hidden">Email address</label>
                            <input type="email" id="newsletter-email" name="email" placeholder="Your email" required class="newsletter-input" />
                            <button type="submit" class="newsletter-button">Subscribe</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="footer-bottom">
        <div class="container">
            <div class="footer-bottom-content">
                <p class="copyright">&copy; @DateTime.Now.Year Predel News. All rights reserved.</p>
                <p class="footer-credits">Powered by Umbraco CMS</p>
            </div>
        </div>
    </div>
</footer>
