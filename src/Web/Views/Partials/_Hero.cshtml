@model IReadOnlyList<ArticleSummary>
@{
    var mainArticle = Model?.FirstOrDefault();
    var secondaryArticles = Model?.Skip(1).Take(4).ToList() ?? new List<ArticleSummary>();
}
<section class="hero-section" aria-label="Featured articles">
    <div class="hero-grid">
        @if (mainArticle != null)
        {
            <article class="hero-main">
                <a href="@mainArticle.GetUrl()" class="hero-main-link">
                    @if (mainArticle.FeaturedImage != null)
                    {
                        <figure class="hero-main-image">
                            <img src="@mainArticle.FeaturedImage.GetCropUrl(800, 450)"
                                 alt="@(mainArticle.FeaturedImage.AltText ?? mainArticle.Title)"
                                 width="800"
                                 height="450"
                                 loading="eager" />
                        </figure>
                    }
                    <div class="hero-main-content">
                        @if (mainArticle.IsBreakingNews)
                        {
                            <span class="badge badge-breaking">Breaking</span>
                        }
                        <span class="hero-category">@mainArticle.CategoryName</span>
                        <h2 class="hero-main-title">@mainArticle.Title</h2>
                        @if (!string.IsNullOrEmpty(mainArticle.Excerpt))
                        {
                            <p class="hero-main-excerpt">@mainArticle.Excerpt</p>
                        }
                        <div class="hero-meta">
                            <time datetime="@mainArticle.PublishDate.ToString("yyyy-MM-ddTHH:mm:ss")">
                                @mainArticle.PublishDate.ToString("d MMMM yyyy", new System.Globalization.CultureInfo("bg-BG"))
                            </time>
                        </div>
                    </div>
                </a>
            </article>
        }

        @if (secondaryArticles.Any())
        {
            <div class="hero-secondary">
                @foreach (var article in secondaryArticles)
                {
                    <article class="hero-secondary-item">
                        <a href="@article.GetUrl()" class="hero-secondary-link">
                            @if (article.FeaturedImage != null)
                            {
                                <figure class="hero-secondary-image">
                                    <img src="@article.FeaturedImage.GetCropUrl(400, 225)"
                                         alt="@(article.FeaturedImage.AltText ?? article.Title)"
                                         width="400"
                                         height="225"
                                         loading="lazy" />
                                </figure>
                            }
                            <div class="hero-secondary-content">
                                @if (article.IsBreakingNews)
                                {
                                    <span class="badge badge-breaking badge-small">Breaking</span>
                                }
                                <h3 class="hero-secondary-title">@article.Title</h3>
                                <time datetime="@article.PublishDate.ToString("yyyy-MM-ddTHH:mm:ss")" class="hero-secondary-date">
                                    @article.PublishDate.ToString("d MMM", new System.Globalization.CultureInfo("bg-BG"))
                                </time>
                            </div>
                        </a>
                    </article>
                }
            </div>
        }
    </div>
</section>
