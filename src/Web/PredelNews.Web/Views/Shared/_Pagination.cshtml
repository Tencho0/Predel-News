@model PredelNews.Core.ViewModels.PaginationViewModel

@if (Model.TotalPages > 1)
{
    <nav aria-label="Навигация между страници" class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                <a class="page-link" href="@PageUrl(Model.CurrentPage - 1)">
                    <i class="bi bi-chevron-left"></i> Предишна
                </a>
            </li>
            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@PageUrl(i)">@i</a>
                </li>
            }
            <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@PageUrl(Model.CurrentPage + 1)">
                    Следваща <i class="bi bi-chevron-right"></i>
                </a>
            </li>
        </ul>
    </nav>
}

@functions {
    string PageUrl(int page)
    {
        if (page <= 1) return Model.BaseUrl;
        return $"{Model.BaseUrl}?page={page}";
    }
}
